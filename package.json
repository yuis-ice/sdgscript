{
  "name": "sdgscript",
  "version": "0.1.0",
  "description": "TypeScript superset for SDGs-aware programming",
  "keywords": ["typescript", "sdgs", "sustainability", "static-analysis", "compiler"],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "sdgscript": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc -b",
    "dev": "tsc -b --watch",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "analyze": "node dist/cli/index.js analyze",
    "example": "node dist/cli/index.js build examples/",
    "docs": "typedoc src/",
    "clean": "rm -rf dist"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "ts-morph": "^21.0.1",
    "typescript": "^5.3.3",
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "typedoc": "^0.25.7",
    "ts-jest": "^29.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sdgscript/sdgscript.git"
  },
  "license": "MIT",
  "author": "SDGScript Team"
}
